<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Login">

    <ScrollView
        android:id="@+id/lupa_password_baru"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/_bg__lupa_password"
                android:background="@drawable/_bg__lupa_password_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /> <!-- Changed to wrap_content -->

            <RelativeLayout
                android:id="@+id/frame_39"
                android:layout_marginTop="177dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/rectangle_62"
                        android:background="@drawable/rectangle_62_shape"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="343dp"
                        android:layout_height="44dp" />

                    <TextView
                        android:id="@+id/masukan_kata_sandi_baru"
                        android:textSize="18sp"
                        android:textColor="@color/transparent_black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="9dp"
                        android:layout_width="274dp"
                        android:layout_height="40dp"
                        android:text="@string/masukan_kata_sandi_baru__string" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email_ek1"
                    android:layout_marginTop="82dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/rectangle_62_ek1"
                        android:background="@drawable/rectangle_62_ek1_shape"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="343dp"
                        android:layout_height="44dp" />

                    <TextView
                        android:id="@+id/konfirmasi_kata_sandi"
                        android:textSize="18sp"
                        android:textColor="@color/transparent_black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="9dp"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:text="@string/konfirmasi_kata_sandi__string" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/send"
                    android:layout_marginTop="164dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/rectangle_63"
                        android:background="@drawable/rectangle_63_shape"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="343dp"
                        android:layout_height="50dp" />

                    <RelativeLayout
                        android:id="@+id/frame_38"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="133dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/send_icon"
                            android:layout_marginTop="5.73dp"
                            android:layout_marginStart="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/group"
                                android:layout_marginTop="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/vector"
                                    android:src="@drawable/vector"
                                    android:contentDescription="vector"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_width="18dp"
                                    android:layout_height="15.53dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/kirim"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="72dp"
                            android:layout_height="40dp"
                            android:text="Kirim" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/forgot_your_password_"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="93dp"
                android:layout_marginTop="53dp"
                android:layout_width="198dp"
                android:layout_height="48dp"
                android:text="@string/forgot_your_password__string" />

            <TextView
                android:id="@+id/Mmasukkan_kata_sandi_baru_dan_konfirmasi__string"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="87dp"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:text="@string/masukkan_kata_sandi_baru_dan_konfirmasi__string" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>